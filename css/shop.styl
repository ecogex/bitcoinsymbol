@import 'reset.css'
@import 'nib/vendor'

transition(properties, durations, timings)
    -moz-transition-property properties
    -o-transition-property properties
    -webkit-transition-property properties
    -ms-transition-property properties
    transition-property properties
    -moz-transition-duration durations
    -o-transition-duration durations
    -webkit-transition-duration durations
    -ms-transition-duration durations
    transition-duration durations
    -moz-transition-timing-function timings
    -o-transition-timing-function timings
    -webkit-transition-timing-function timings
    -ms-transition-timing-function timings
    transition-timing-function timings
    

body
  font 18px 'source_sans_pro', arial, sans-serif
  -webkit-animation rainbow 20s infinite
  -moz-animation rainbow 20s infinite
  -o-animation rainbow 20s infinite
  animation rainbow 20s infinite
main
  max-width 1200px
  width 100%
  padding 5%
  margin 0 auto 40px auto
  border-left 1px solid
  border-right 1px solid
  border-bottom 1px solid
  overflow hidden
  p
    margin-bottom .7em
  h1
    font-size 2em
    margin 0 0 60px 0
    letter-spacing 0.03em
    line-height 1em
    font-weight bold
  h2
    font-weight bold
    margin-bottom 10px
    
.shop-items
  table
    width 100%
    border-spacing 0
    border-collapse collapse
    margin-bottom 40px
  img
      display block
      margin 0 auto
      max-width 300px
  td, th
    vertical-align middle
    text-align center
    border 1px solid
    padding 20px
  .submit
    text-align right
  input.number
    transition(all, 0.2s, ease-out)
    text-align center
    font-size 1em
  button
    width 39%

.right
  width 30%
  float right

.left
  padding-right 20%
  width 70%
  float left

.order
  li, .total
    border 1px solid
    padding 40px
    margin-bottom 40px
  img
    width 100%
    max-width 300px
  
// Form

input[type=text], input[type=number], input[type=email], textarea
  color inherit
  border 1px solid
  padding 4px
  width 100%
  font-size 1em
label
  margin-bottom 40px
  display block
  br
    margin-bottom .2em
button
  font-size 24px
  cursor pointer
  background white
  color inherit
  border 10px solid
  padding 30px 10px
  width 100%
  &:hover, &:focus
    color blue

.r1
  transform rotate(-10deg) scale(1.1)
.r2
  transform rotate(10deg) scale(1.1)

// Borders animation

@-webkit-keyframes rainbow {
    0% { color: rgb(255, 0, 59); }
    33% { color: rgb(23, 150, 180); }
    66% { color: rgb(18, 217, 56); }
    100% { color: rgb(255, 0, 59); }
}
@-moz-keyframes rainbow {
    0% { color: rgb(255, 0, 59); }
    33% { color: rgb(23, 150, 180); }
    66% { color: rgb(18, 217, 56); }
    100% { color: rgb(255, 0, 59); }
}
@-o-keyframes rainbow {
    0% { color: rgb(255, 0, 59); }
    33% { color: rgb(23, 150, 180); }
    66% { color: rgb(18, 217, 56); }
    100% { color: rgb(255, 0, 59); }
}
@keyframes rainbow {
    0% { color: rgb(255, 0, 59); }
    33% { color: rgb(23, 150, 180); }
    66% { color: rgb(18, 217, 56); }
    100% { color: rgb(255, 0, 59); }
}

